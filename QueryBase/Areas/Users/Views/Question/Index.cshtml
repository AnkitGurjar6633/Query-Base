@model QuestionVM

<div class="p-4">
    <div class="d-flex flex-md-nowrap flex-wrap-reverse justify-content-end">
        <div class="mb-2 flex-grow-1">
            <h3 class="lh-base mb-0">@Model.Question.Title</h3>
        </div>
        <div class="ms-md-3 ms-0 mt-md-3 mt-0 mb-2 mb-md-0">
            <a asp-action="Ask" asp-controller="AskQuestion" asp-area="Users" class="btn btn-info text-nowrap">Ask Question</a>
        </div>
    </div>
    <div class="d-flex flex-wrap fs-small fs-vsmall mb-3 pb-2 border-bottom border-1">
        <div class="d-inline-flex mb-2 me-3">
            <span class="text-muted me-1">Asked</span>
             2 days ago
        </div>
        <div class="d-inline-flex mb-2 me-3">
            <span class="text-muted me-1">Modified</span>
            2 days ago
        </div>
        <div class="d-inline-flex mb-2">
            <span class="text-muted me-1">Viewed</span>
            14 times
        </div>
    </div>
    <div id="Main-Content" >
        <div id="Section-Question" class="container mx-0 text-center">
            <div id="Question-Layout" class="row row-cols-2">
                <div id="Vote-Cell" class="col-2 col-md-1 pe-3 ps-0">
                    <div class="d-flex flex-column">
                        <div>
                            <button class="btn rounded-circle border border-1" style="padding: 10.4px; margin: 2px;">
                                12
                            </button>
                        </div>
                        <div class="d-flex justify-content-center">
                            <div class="m-1 py-1">1</div>
                        </div>
                        <div>
                            <button class="btn rounded-circle border border-1" style="padding: 10.4px; margin: 2px 2px 8px;">
                                12
                            </button>
                        </div>
                        <div>
                            <button class="py-1 btn border-0">1</button>
                        </div>
                        <div>
                            <button class="btn border-0 mx-lg-3 my-lg-1 py-lg-2 py-1">1</button>
                        </div>
                    </div>
                </div>
                <div id="Question-Cell" class="col-10 col-md-11 pe-3 ps-0">
                    <div id="Question-Description" class="">QuestionDescription</div>
                    <div id="Question-Tag" class="mt-4 mb-3 fs-small">QuestionTag</div>
                    <div id="Question-User" class="my-3 pt-1 fs-small d-flex flex-row justify-content-end">
                        <div class="my-1">
                            <div class="p-2">
                                <div id="Question-Time" class="fs-11 text-muted">QuestionTime</div>
                                <div id="User-Details" class="d-flex flex-row">
                                    <div id="User-Image">UserImage</div>
                                    <div id="USer-Details" class="ms-2 fs-small fs-vsmall">UserDetails</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2 col-md-1 ps-0"><span class="d-none">4</span></div>
                <div id="Question-Comment" class="col-10 col-md-11 pe-3 ps-0">
                    QuestionComment
                </div>
            </div>
        </div>
        <div id="Section-Answers" class="pt-3">
            <div id="Answer-Header" class="mt-3">
                asdas
            </div>
        </div>
    </div>
</div>