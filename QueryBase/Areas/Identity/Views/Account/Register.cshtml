@using QueryBase.Utility
@model RegisterVM

@{
    ViewBag.Title = "Register";
}

<div class="container mt-3">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Create an account</h2>
    
                            <form asp-area="Identity" asp-controller="Account" asp-action="Register" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]" method="post">
    
                                <div class="form-floating mb-3">
                                    <input class="form-control" placeholder="JhonDoe123" asp-for="UserName">
                                    <label asp-for="UserName" class="ms-2 text-muted">User Name</label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input class="form-control" placeholder="name@example.com" asp-for="Email">
                                    <label asp-for="Email" class="ms-2 text-muted">Email address</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input class="form-control" type="tel" id="phoneNumber" placeholder="9876543210" asp-for="PhoneNumber">
                                    <label asp-for="PhoneNumber" class="ms-2 text-muted">Phone Number</label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input class="form-control" placeholder="Password" asp-for="Password">
                                    <label asp-for="Password" class="ms-2 text-muted">Password</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input class="form-control" placeholder="Confirm Password" asp-for="ConfirmedPassword">
                                    <label asp-for="ConfirmedPassword" class="ms-2 text-muted">Confirm Password</label>
                                    <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                                </div>

                               
                                
                              @if(User.IsInRole(UserTypeOptions.Admin.ToString())){
                                    <div class="d-flex mt-4 mb-4 justify-content-evenly">
                                        <div class="form-check ">
                                            <input class="form-check-input align-self-center mt-2" type="radio" role="button" id="User" asp-for="UserType" value="User" checked>
                                            <label class="form-check-label fs-5" role="button" for="User">
                                                User
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input align-self-center mt-2" type="radio" role="button" asp-for="UserType" id="Admin" value="Admin">
                                            <label class="form-check-label fs-5" role="button" for="Admin">
                                                Admin
                                            </label>
                                        </div>
                                    </div>
                              }
    
                                <div class="d-flex flex-column mt-4 justify-content-center">
                                    <button type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Register</button>
                                </div>
                                
                                <div asp-validation-summary="All" class="text-danger mt-3">
                                    @if(ViewBag.Errors != null){
                                        <div class="text-danger">
                                            <ul>
                                                @foreach(string error in ViewBag.Errors)
                                                {
                                                    <li>@error</li>
                                                }
                                            </ul>
                                        </div>
                                    }
                                </div>
    
                                <p class="text-center text-muted mt-4 mb-0">
                                    Already have an account? <a asp-action="Login" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]" class="fw-bold text-body"><u>Login here</u></a>
                                </p>
    
                            </form>
    
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
    <script src="~/js/phoneNumberInputConstraint.js"></script>

}


